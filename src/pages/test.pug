        .screen__section.screen__section_news
            .news-title.title Новости #[br] в ногу со временем
            .news-list.scrollMouse.dragscroll.js-news-list.js-news-list_fold
                each newsItem in news
                    +news(newsItem)(src= newsItem.image, href= `#${newsItem.id}`)
        .news-detail-container.js-news-detail.js-news-detail_open
