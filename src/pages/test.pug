doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        script(src="https://cdnjs.cloudflare.com/ajax/libs/screenfull.js/5.1.0/screenfull.min.js") 
        //- link(rel="stylesheet", href="main.css")
    body 
        .video-wrapper
            .cover.js-intro
                .cover__play Play
            video.video(src="assets/videoplayback.mp4")
            style.
                .video-wrapper{
                    position: relative;
                    display: flex;
                    justify-content:center;
                    align-items:center;
                }
                .video-wrapper:fullscreen .cover{
                    display:none;
                }
                .video-wrapper video{
                    max-width:100%;
                    max-height:100%;
                    
                }
                .cover {
                    position: absolute;
                    top: 0;
                    left: 0;
                    right: 0;
                    bottom: 0;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    background-color: rgba(0,0,0,.75);
                    
                }
                .cover__play{
                    border-radius: 50%;
                    background: white;
                    height: 50px;
                    width: 50px;
                    z-index:20;
                }
            script
                include /components/video/video.js
                .
                    const introWrapper = document.querySelector(".js-intro");
                    introWrapper.addEventListener('click', (e)=>showFullscreenVideo(e));